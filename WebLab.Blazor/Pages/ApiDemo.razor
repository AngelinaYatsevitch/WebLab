@page "/apidemo"

@inject HttpClient client
@using WebLab.Blazor.Data
@using WebLab.Blazor.Components

<div class="container">
    <div class="container">
        <DishesList @bind-Dishes="dishes"></DishesList>
        @*<DishDetails @bind-Dish="SelectedDish"></DishDetails>*@
    </div>
</div>
@code {
    [Parameter]
    public IEnumerable<ListViewModel> dishes { get; set; }
    string apiBaseAddress = "https://localhost:44345/Api/Dishes";
    protected override async Task OnInitializedAsync()
    {
        dishes =
        await client.GetFromJsonAsync<IEnumerable<ListViewModel>>(apiBaseAddress);
       

    }
}